@{
    ViewBag.Title = "Determinante";
}
<div class="container">
    <h1>Determinante por elementos de una línea</h1>
    <div class="row">

        <form action="#" method="post" class="form-group">
            <div class="col-md-6">
                <div class="card-header"><h3>Matriz</h3></div>
                <div class="card-body">
                    <label for="aFilas">Numero Filas: </label>
                    <input id="aFilas" type="number" name="aFilas" class="form-control" />

                    <label for="aColumnas">Numero Columnas: </label>
                    <input id="aColumnas" type="number" name="aColumnas" class="form-control" />
                    <br />
                </div>
                <div class="card-footer">

                </div>

            </div>
            <div class="col-lg-12">
                <input id="sub1" type="submit" value="Agregar Datos" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <form action="HacerDet" method="post">
        <div class="container" style="background-color:#f2f2f2; margin-top:30px; padding:12px">
            <h2>@ViewBag.mensaje</h2>
            <div class="col-lg-6">
                <div class="form-group form-inline" style="margin-top:15px">
                    <h3>A</h3>
                    @for (int i = 0; i < ViewBag.afilas; i++)
                    {
                        for (int j = 0; j < ViewBag.acolumnas; j++)
                        {
                            <input type="number" name="a @i @j" value="" class="form-control" style="height:80px; width: 80px; margin:3px 3px 3px 3px" placeholder="[@i, @j]" />
                        }
                        <br />
                    }
                </div>
            </div>
        </div>
        <div class="container" style="margin-top:30px">
            <input type="submit" name="click" value="Calcular" class="btn btn-primary" />
        </div>
        <!--PARA GUARDAR LAS FILAS Y COLUMNAS-->
        <input type="hidden" name="naf" value="@ViewBag.afilas" />
        <input type="hidden" name="nac" value="@ViewBag.acolumnas" />
    </form>
    <h1>@ViewBag.res</h1>

</div>

